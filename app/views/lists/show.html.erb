<h1><%= @list.name %></h1>

<%= link_to 'Back to lists', lists_path %>

<h2>Bookmarks</h2>
<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to 'Delete', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
